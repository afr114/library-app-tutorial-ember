<table class="table table-bordered table-striped">
    <thead>
      <tr>
          <th>ID</th>
          <th>E-mail</th>
          <th>Edit Email</th>
          <th>Delete Email</th>
      </tr>
    </thead>
    <tbody>
    {{#each model as |invitation|}}
      <tr>
        <td>{{invitation.id}}</td>
        <td>{{invitation.email}}</td>
        {{#if isEdit}}
        {{input type="email" value=newEmailAddress class="form-control" placeholder="Please type your e-mail address." autofocus="autofocus"}}
        <button class="btn btn-primary btn-sm btn-block" {{action 'sendEditEmail' invitation}}>Change Email</button>
        {{else}}
        <td><button class="btn btn-primary btn-sm btn-block" {{action 'editEmail'}}>Edit Email</button></td>
        {{/if}}
        <td><button class="btn btn-danger btn-sm btn-block" {{action 'deleteEmail' invitation}}>Delete Email</button></td>
      </tr>
    {{/each}}
    </tbody>
</table>
